@using QuickJob.Function;
@{ 
    var coo = new FunctionController();
    var id = coo.CookieID();
}
<div class="border" style="border-radius: 5%">
    <div class="row" style="padding: 10px">
        <div class="col-lg-4">
            <img src="~/Images/Users/146-1468479_my-profile-icon-blank-profile-picture-circle-hd.png" style="width: 100%; height: 70px; border-radius: 50%" />
            <p class="text-center">Cập nhật</p>
        </div>
        <div class="col-lg-8">
            Chào bạn trở lại, <br />
            <h4>@id.user_name</h4>
            <p>
                @if(id.Version.version_id == 2)
                {
                    <b></b>
                }
                else
                {
                    <b>Tài khoản miễn phí</b>
                }
            </p>
            <button class="ui green button">Nâng cấp tài khoản</button>
        </div>
        <div class="col-lg-12 mt-4">
            <div class="ui toggle checkbox" onclick="option()">
                <input type="checkbox" name="public">
                <label>Trạng thái tìm việc đang tắt</label>
            </div>
            <p>
                Bật tìm việc để nhận được nhiều cơ hội việc làm tốt nhất từ TopCV.
            </p>
        </div>
        <div class="col-lg-12 mt-4">
            <div class="ui toggle checkbox">
                <input type="checkbox" name="public">
                <label>Nhà tuyển dụng được phép liên hệ</label>
            </div>
            <p>
                Nhà tuyển dụng sẽ gửi thông báo, Chat với bạn nếu như được bật.
            </p>
        </div>
    </div>
</div>
<script>
    function option() {
        alert("a");
    }
</script>
